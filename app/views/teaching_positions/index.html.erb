<p id="notice"><%= notice %></p>

<h1>Teaching Positions</h1>

<table>
  <thead>
    <tr>
      <th>Teacher</th>
      <th>School</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teaching_positions.each do |teaching_position| %>
      <tr>
        <td><%= teaching_position.teacher.name %></td>
        <td><%= teaching_position.school.name %></td>
        <td><%= link_to 'Show', teaching_position %></td>
        <td><%= link_to 'Edit', edit_teaching_position_path(teaching_position) %></td>
        <td><%= link_to 'Destroy', teaching_position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

