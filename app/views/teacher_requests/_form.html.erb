<%= form_for(teacher_request) do |f| %>
  <% if teacher_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(teacher_request.errors.count, "error") %> prohibited this teacher_request from being saved:</h2>

      <ul>
      <% teacher_request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit 'Request' %>
    <% if teacher_request.persisted? && teacher_request.closed_at.nil? %>
      <%= link_to 'Close request', [:close, teacher_request], :data => {:confirm => 'Are you sure?'}, :method => :patch %>
    <% end %>
  </div>
<% end %>
